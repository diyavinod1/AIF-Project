import React from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { TrendingUp, ArrowRight } from "lucide-react";

export default function STARTransformations({ transformations }) {
  if (!transformations || transformations.length === 0) {
    return (
      <Card className="bg-white/80 backdrop-blur-sm border-0 shadow-xl">
        <CardHeader>
          <CardTitle className="flex items-center gap-3 text-slate-900">
            <TrendingUp className="w-5 h-5 text-blue-600" />
            STAR Bullet Point Improvements
          </CardTitle>
        </CardHeader>
        <CardContent className="p-6">
          <div className="text-center text-slate-500">
            <p>No bullet point transformations available yet.</p>
          </div>
        </CardContent>
      </Card>
    );
  }

  return (
    <Card className="bg-white/80 backdrop-blur-sm border-0 shadow-xl">
      <CardHeader className="border-b border-slate-100">
        <CardTitle className="flex items-center gap-3 text-slate-900">
          <TrendingUp className="w-5 h-5 text-blue-600" />
          STAR Bullet Point Transformations
        </CardTitle>
        <p className="text-sm text-slate-600 mt-2">
          See how your bullet points were improved using the STAR method (Situation-Task-Action-Result)
        </p>
      </CardHeader>
      <CardContent className="p-6 space-y-6">
        {transformations.map((transformation, index) => (
          <div key={index} className="border border-slate-200 rounded-lg p-6 bg-slate-50/50">
            <div className="flex items-center gap-2 mb-4">
              <Badge variant="outline" className="bg-white">
                Improvement #{index + 1}
              </Badge>
            </div>
            
            <div className="space-y-4">
              {/* Before */}
              <div>
                <div className="flex items-center gap-2 mb-2">
                  <div className="w-3 h-3 bg-red-500 rounded-full"></div>
                  <span className="text-sm font-semibold text-red-700">Before</span>
                </div>
                <div className="bg-red-50 border border-red-200 rounded-lg p-4">
                  <p className="text-sm text-red-800 leading-relaxed">
                    {transformation.before}
                  </p>
                </div>
              </div>

              {/* Arrow */}
              <div className="flex justify-center">
                <ArrowRight className="w-6 h-6 text-slate-400" />
              </div>

              {/* After */}
              <div>
                <div className="flex items-center gap-2 mb-2">
                  <div className="w-3 h-3 bg-green-500 rounded-full"></div>
                  <span className="text-sm font-semibold text-green-700">After</span>
                </div>
                <div className="bg-green-50 border border-green-200 rounded-lg p-4">
                  <p className="text-sm text-green-800 leading-relaxed">
                    {transformation.after}
                  </p>
                </div>
              </div>
            </div>
          </div>
        ))}
        
        <div className="bg-blue-50 border border-blue-200 rounded-lg p-4 mt-6">
          <h4 className="font-semibold text-blue-900 mb-2">Key Improvements:</h4>
          <ul className="text-sm text-blue-800 space-y-1">
            <li>• Added specific metrics and quantifiable results</li>
            <li>• Used stronger action verbs and active voice</li>
            <li>• Included context and business impact</li>
            <li>• Structured using STAR methodology for clarity</li>
          </ul>
        </div>
      </CardContent>
    </Card>
  );
}
