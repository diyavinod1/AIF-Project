{
  "name": "ResumeAnalysis",
  "type": "object",
  "properties": {
    "candidate_name": {
      "type": "string",
      "description": "Name of the candidate"
    },
    "experience_level": {
      "type": "string",
      "description": "Experience level (fresher, 1-3 years, 3-5 years, 5+ years)"
    },
    "target_role": {
      "type": "string",
      "description": "Target job title/role"
    },
    "job_description": {
      "type": "string",
      "description": "Complete job description text"
    },
    "original_resume": {
      "type": "string",
      "description": "Original resume content in plain text"
    },
    "extra_keywords": {
      "type": "string",
      "description": "Additional keywords to focus on"
    },
    "tone_preference": {
      "type": "string",
      "enum": [
        "confident",
        "concise",
        "impactful",
        "professional"
      ],
      "default": "professional",
      "description": "Preferred tone for the resume"
    },
    "region": {
      "type": "string",
      "enum": [
        "US",
        "UK",
        "IN"
      ],
      "default": "US",
      "description": "Region for spelling and formatting"
    },
    "ats_score": {
      "type": "number",
      "description": "ATS compatibility score (0-100)"
    },
    "analysis_results": {
      "type": "object",
      "description": "Complete analysis results including scores, gaps, and recommendations"
    },
    "optimized_resume_plain": {
      "type": "string",
      "description": "ATS-optimized resume in plain text format"
    },
    "optimized_resume_formatted": {
      "type": "string",
      "description": "ATS-optimized resume in formatted markdown"
    },
    "cover_letter": {
      "type": "string",
      "description": "Generated cover letter"
    },
    "linkedin_headline": {
      "type": "string",
      "description": "Optimized LinkedIn headline"
    },
    "linkedin_about": {
      "type": "string",
      "description": "Optimized LinkedIn About section"
    }
  },
  "required": [
    "candidate_name",
    "target_role",
    "job_description",
    "original_resume"
  ]
}
